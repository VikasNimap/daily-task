<!-- main site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fa-solid fa-angles-left"></i> All Users</a>
            </div>
        </div>
        <div class="form-text text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the form below to update an account</span>
        </div>
        <!-- Add user form -->
        <!-- form handling -->
<form  method="post" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="pId" class="text-light">Product-ID</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="pId" value="<%= user._id %>" placeholder="Enter Product-ID">
        </div>
        <div class="form-group">
            <label for="pname" class="text-light">Product-Name</label>
            
            <input type="text" name="pname" value="<%= user.pname %>" placeholder="Enter Product-Name">
        </div>
        <div class="form-group">
            <label for="Category-Name" class="text-light">Category-Name</label>
            <div class="radio inline">

                <input type="radio" id="radio1" name="Category-Name" value="Mobile"><%= user.Category-Name=='Android'? 'checked' : '' %>
                <label for="radio1" class="radio-label">Android</label>
            </div>
            <div class="radio inline">

                <input type="radio" id="radio2" name="Category-Name" value="Laptop"><%= user.Category-Name=='Windows'? 'checked' : '' %>
                <label for="radio2" class="radio-label">Windows</label>
            </div>
            
        </div>
        <div class="form-group">
            <label for="cId" class="text-light">Category-ID</label>
            <input type="hidden" name="id" value="<%= user.cId %>">
            <input type="text" name="cId" value="<%= user.cId %>" placeholder="Enter Category-ID">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>
        <!-- /user form -->
    </div>
</main>    


<!-- /close main site -->



